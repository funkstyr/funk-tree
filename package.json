{
  "name": "funk-tree",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "@orpc/client": "^1.12.2",
      "vitest": "^4.0.15",
      "@vitest/coverage-v8": "^4.0.15"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @funk-tree/db db:push",
    "db:studio": "turbo -F @funk-tree/db db:studio",
    "db:generate": "turbo -F @funk-tree/db db:generate",
    "db:migrate": "turbo -F @funk-tree/db db:migrate",
    "db:start": "turbo -F @funk-tree/db db:start",
    "db:watch": "turbo -F @funk-tree/db db:watch",
    "db:stop": "turbo -F @funk-tree/db db:stop",
    "db:down": "turbo -F @funk-tree/db db:down",
    "crawl": "turbo -F @funk-tree/crawler crawl",
    "crawl:migrate": "turbo -F @funk-tree/crawler migrate",
    "crawl:status": "turbo -F @funk-tree/crawler status",
    "check": "oxlint && oxfmt --write",
    "check:type-aware": "oxlint --tsconfig tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@funk-tree/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@funk-tree/config": "workspace:*",
    "@types/bun": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
