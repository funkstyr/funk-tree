# WikiTree Crawler Configuration
# Copy this file to .env and customize values as needed

# =============================================================================
# Required for Geocoding (optional feature)
# =============================================================================

# Mapbox API token for geocoding birth/death locations
# Get one at: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=

# =============================================================================
# Crawler Settings
# =============================================================================

# Starting WikiTree ID (default: Funck-6 - Bishop Henry Funck)
CRAWLER_START_ID=Funck-6

# PGLite database directory (relative to apps/crawler)
CRAWLER_DATA_DIR=../../data/pglite

# API request delay in milliseconds (rate limiting, default: 1000)
CRAWLER_REQUEST_DELAY_MS=1000

# Max retries for failed API requests (default: 3)
CRAWLER_MAX_RETRIES=3

# Log progress every N items processed (default: 25)
CRAWLER_SAVE_INTERVAL=25

# Export database snapshot every N new persons (default: 500)
CRAWLER_EXPORT_INTERVAL=500

# Automatically geocode locations after crawling (default: true)
# Set to "false" to disable
CRAWLER_GEOCODE_AFTER_CRAWL=true

# Crawl parent profiles in addition to children/spouses (default: false)
# Set to "true" to enable (warning: this can significantly expand the crawl)
CRAWLER_CRAWL_PARENTS=false

# =============================================================================
# Output Paths (relative to apps/crawler)
# =============================================================================

# Directory for backup files
CRAWLER_BACKUP_DIR=../../apps/web/public/data

# Export file path for web app bundle
CRAWLER_EXPORT_FILE=../../apps/web/public/data/funk-tree.tar.gz

# Progress tracking file (for legacy crawler)
CRAWLER_PROGRESS_FILE=../../data/progress.json
