{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@funk-tree/api": "workspace:*",
    "@funk-tree/auth": "workspace:*",
    "@funk-tree/db": "workspace:*",
    "@funk-tree/env": "workspace:*",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "hono": "^4.8.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@funk-tree/config": "workspace:*",
    "@types/bun": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "tsdown": "^0.16.5",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
